{
  "hooks": {
    "before:init": "npm run clean && npm test",
    "before:release": "npm pack",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "tagName": "v${version}"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "assets": ["build/*.js", "build/*.d.ts", "*.tgz"]
  }
}
